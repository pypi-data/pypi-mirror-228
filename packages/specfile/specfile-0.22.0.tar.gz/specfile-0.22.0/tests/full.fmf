summary:
  Unit & integration tests
require:
  - git-core
  - python3-flexmock
  - python3-pytest
  - python3-pytest-cov
  - python3-specfile
adjust:
  - when: "distro == rhel-9 or distro == centos-9 or distro == centos-stream-9"
    because: "flexmock is not in EPEL 9: https://bugzilla.redhat.com/show_bug.cgi?id=2120251"
    require-:
      - python3-flexmock
tag:
  - basic
tier: 1
test: python3 -m pytest --verbose --cov=specfile --cov-report=term-missing unit integration
